<Window x:Class="Underwater_Robot_NFC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Underwater_Robot_NFC"
        mc:Ignorable="d"
        Title="Underwater Robot NFC system" Height="350" Width="525">
    <Grid>
        <TextBlock Margin="0,31,388.4,260.2" TextWrapping="Wrap" Text="COM Port:" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="24"/>
        <ComboBox x:Name="comport_list" HorizontalAlignment="Left" Margin="135,39,0,260.2" VerticalAlignment="Center" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="connect_btn" Content="Connect" HorizontalAlignment="Left" Margin="276,41,0,0" VerticalAlignment="Top" Width="75" Click="connect_btn_Click"/>
        <TextBlock x:Name="team_name" HorizontalAlignment="Left" Margin="93,85,0,0" TextWrapping="Wrap" Text="Team: " VerticalAlignment="Top"/>
        <TextBox x:Name="balance_change" HorizontalAlignment="Left" Height="23" Margin="135,107,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" KeyDown="balance_changed"/>
        <TextBlock x:Name="team_balance" HorizontalAlignment="Left" Margin="123,108,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top"/>
    </Grid>
</Window>
